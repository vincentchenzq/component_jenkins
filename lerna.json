{
  "version": "0.3.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "message": "ci(publish): lerna publish %s",
      "registry": "http://vincentchen.cn:8083"
    },
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "includeMergedTags": true,
      "allowBranch": [
        "master",
        "dev"
      ],
      "conventionalCommits": true,
      "ignoreChanges": [
        "build/",
        "docs/",
        "*.md",
        "**/__tests__/**",
        "**/test/unit/**/*.spec.(js|jsx|ts|tsx)",
        "**/__tests__/*.(js|jsx|ts|tsx)",
        "**/*.md",
        ".gitlab/",
        "test/",
        "lerna.json"
      ],
      "message": "ci(publish): lerna version %s"
    }
  },
  "packages": [
    "packages/*"
  ]
}
